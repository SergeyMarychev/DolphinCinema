@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Логин - DolphinCinema</title>

    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
</head>
<body class="login__body">
    <div class="login">
        <form class="login__form">
            <h2 class="login__title">Вход</h2>
            <div class="form__group">
                <label class="login__lable" for="login">Логин:</label>
                <vc:input id="login" />
            </div>
            <div class="form__group">
                <label class="login__lable" for="password">Пароль:</label>
                <vc:input id="password" type="password" />
            </div>
            <button class="login__btn" type="submit">Войти</button>
        </form>
    </div>
    
</body>
</html>
